# Ohio Rate Watch — Environment Variables
# Copy this file to .env and fill in your values.
# Never commit .env to version control.

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:5432/ratewatch

# Resend API key (for email alerts and confirmations)
# Get one at https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# Secret for securing the /api/cron/daily-check endpoint
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET=your_cron_secret_here

# Discord webhook URL for scraper status alerts (optional)
# Create in Discord server settings → Integrations → Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# EIA API key (optional — for Henry Hub natural gas price data)
# Get one at https://www.eia.gov/opendata/
EIA_API_KEY=your_eia_key_here

# Port (Railway sets this automatically)
PORT=3001
